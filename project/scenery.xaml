<Page
    x:Class="project.scenery"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources >
        <ResourceDictionary>
            <AcrylicBrush x:Key="Scenerybrush"
                  BackgroundSource="HostBackdrop"
                  TintOpacity="0.5"
                  TintColor="Pink" 
                  FallbackColor="White" 
                  />
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{ThemeResource Scenerybrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock  Grid.Row="0"
                    Name="TB" 
                   Text="Scenery" FontSize="48" HorizontalAlignment="Center" ></TextBlock>
        <Image Name="Img" Grid.Row="1" Grid.ColumnSpan="2"
               Width="800" Height="600" VerticalAlignment="Top"  HorizontalAlignment="Left"  Margin="200,20,0,00"></Image>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button FontFamily="Segoe MDL2 Assets"  Content="&#xE8C6;" Background="Pink" Opacity="0.5" FontSize="36"
                    Height="75"  HorizontalAlignment="Right"   VerticalAlignment="Top" Width="100"
                    Click="Scenery_Click1"/>
            <Button   FontFamily="Segoe MDL2 Assets"  Content="&#xE929;" Background="Pink" Opacity="0.5" FontSize="36"
                    Height="75"  HorizontalAlignment="Right"   VerticalAlignment="Top" Width="100"
                    Click="Scenery_Click3"/>
            <Button  FontFamily="Segoe MDL2 Assets" Content="&#xE7FA;" Background="Pink" Opacity="0.5" FontSize="36"
                    Height="75"  HorizontalAlignment="Right"   VerticalAlignment="Top" Width="100"
                    Click="Scenery_Click4"/>
            <Button FontFamily="Segoe MDL2 Assets" Content="&#xE8E5;"
                    Background="Pink" Opacity="0.5" FontSize="36"
                    HorizontalAlignment="Right"  Height="75"   VerticalAlignment="Top" Width="100" Click="Scenery_Click5"/>
            <Button FontFamily="Segoe MDL2 Assets"
                    Background="Pink" Opacity="0.5"
                    Content="&#xE722;"  FontSize="36"  Height="75" HorizontalAlignment="Right"    VerticalAlignment="Top" Width="100" Click="Scenery_Click6"/>
            <Button FontFamily="Segoe MDL2 Assets" Content="&#xE72C;" Background="Pink" Opacity="0.5"
                    FontSize="36" HorizontalAlignment="Right"  Height="75" VerticalAlignment="Top" Width="100"  Click="Scenery_Click7"/>
            <Button FontFamily="Segoe MDL2 Assets" Content="&#xE74E;" Background="Pink" Opacity="0.5" FontSize="36"
                    HorizontalAlignment="right" Height="75" VerticalAlignment="Top" Width="100"   Click="Scenery_Click8"/>
        </StackPanel>

        <Frame Name="MyFrame">

        </Frame>

    </Grid>
</Page>
