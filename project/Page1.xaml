                    <Button Content="Cut" HorizontalAlignment="Left" Height="75" Margin="638,146,0,0" VerticalAlignment="Top" Width="208"/>
                    <Button Content="Draw" HorizontalAlignment="Left" Height="75" Margin="934,146,0,0" VerticalAlignment="Top" Width="208" Click="Button_Click_1"/>
                    <Button Content="AddText" HorizontalAlignment="Left" Height="75" Margin="638,281,0,0" VerticalAlignment="Top" Width="208"/>
                <Button Content="AddFilter" HorizontalAlignment="Left" Height="75" Margin="934,281,0,0" VerticalAlignment="Top" Width="208" Click="Button_Click_afilter"/>
                
                <Slider HorizontalAlignment="Left" Height="27" Margin="638,424,0,0" VerticalAlignment="Top" Width="504"/>
                    <Slider HorizontalAlignment="Left" Height="27" Margin="638,496,0,0" VerticalAlignment="Top" Width="504"/>
                    <Slider HorizontalAlignment="Left" Height="27" Margin="638,582,0,0" VerticalAlignment="Top" Width="504"/>
                <Frame Name="MyFrame" Navigated="MyFrame_Navigated">

                </Frame>

            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
